{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "es2015",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "example",
    "lib",
    "dist"
  ]
}